@page "/Chat"
@inject ISemanticBot bot
<h3>Chat</h3>

<Container>
    <TextEdit @bind-Text="@response" />
    <TextEdit @bind-Text="@Prompt"  />
    <Button Clicked="@SendPrompt" Color="Color.Primary"> Send</Button>
</Container>

@code {
    public string Prompt { get; set; } = "What is my name and what is my age?";

    string response = string.Empty;
    
    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }

    async Task SendPrompt()
    {
        response = await bot.Send(Prompt);
    }
}
